<!DOCTYPE html>
<html lang="en">
  <%- include('../common/head.ejs') %>
  <body>
    <!-- Navbar Area -->
    <%- include('../common/navbar.ejs') %>

    <!-- Login Form Section -->
    <div
      style="
        display: flex;
        justify-content: center;
        align-items: flex-start;
        margin-top: 50px;
        padding: 20px;
      "
    >
      <div
        style="
          background-color: #ffffff;
          padding: 30px;
          border-radius: 10px;
          box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
          max-width: 400px;
          width: 100%;
        "
      >
        <h2
          style="
            text-align: center;
            margin-bottom: 20px;
            color: #333333;
            font-size: 24px;
          "
        >
          Update Password
        </h2>
        <form action="/updatepasswordcreate" method="POST">
          <!--New Password Field -->
          <div style="margin-bottom: 20px">
            <label
              for="password"
              style="display: block; margin-bottom: 5px; color: #555555"
              >Old password</label
            >
            <input
              type="password"
              id="oldPassword"
              name="oldPassword"
              placeholder="Enter your old password"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!--New Password Field -->
          <div style="margin-bottom: 20px">
            <label
              for="password"
              style="display: block; margin-bottom: 5px; color: #555555"
              >New password</label
            >
            <input
              type="password"
              id="newPassword"
              name="newPassword"
              placeholder="Enter your new password"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!-- Confirm Password Field -->
          <div style="margin-bottom: 20px">
            <label
              for="password"
              style="display: block; margin-bottom: 5px; color: #555555"
              >Confirm password</label
            >
            <input
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              placeholder="Reenter your new password"
              required
              style="
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
                border-radius: 5px;
                font-size: 16px;
              "
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            style="
              width: 100%;
              padding: 10px;
              background-color: #4a4a8c;
              color: #ffffff;
              border: none;
              border-radius: 5px;
              font-size: 18px;
              cursor: pointer;
              transition: background-color 0.3s;
            "
          >
            Change
          </button>
        </form>
      </div>
    </div>

    <%- include('../common/footer.ejs') %>
  </body>
</html>
